export PKG_CONFIG_PATH=/home/preet/Dev/env/sys/libosmscout/lib/pkgconfig

SRCDIR=$1

cp -f HashMap.h $SRCDIR/libosmscout/include/osmscout/util/
cp -f HashSet.h $SRCDIR/libosmscout/include/osmscout/util/

cd $SRCDIR
cd libosmscout
./autogen.sh && ./configure --disable-see2-support --disable-cpp0x-support --prefix=/home/preet/Dev/env/sys/libosmscout CPPFLAGS="-DUSE_BOOST=1 -I/home/preet/Dev/env/sys/boost-1.53" && make && make install

cd .. && cd libosmscout-import
./autogen.sh && ./configure --disable-see2-support --disable-cpp0x-support --prefix=/home/preet/Dev/env/sys/libosmscout CPPFLAGS="-DUSE_BOOST=1 -I/home/preet/Dev/env/sys/boost-1.53" && make && make install

cd .. && cd Import
cp map.ost /home/preet/Dev/env/sys/libosmscout
cp standard.oss /home/preet/Dev/env/sys/libosmscout
./autogen.sh && ./configure --disable-see2-support --disable-cpp0x-support --prefix=/home/preet/Dev/env/sys/libosmscout CPPFLAGS="-DUSE_BOOST=1 -I/home/preet/Dev/env/sys/boost-1.53" && make && make install

cd .. && cd libosmscout-map
./autogen.sh && ./configure --disable-see2-support --disable-cpp0x-support --prefix=/home/preet/Dev/env/sys/libosmscout CPPFLAGS="-DUSE_BOOST=1 -I/home/preet/Dev/env/sys/boost-1.53" && make && make install

cd .. && cd libosmscout-map-qt
./autogen.sh && ./configure --disable-see2-support --disable-cpp0x-support --prefix=/home/preet/Dev/env/sys/libosmscout CPPFLAGS="-DUSE_BOOST=1 -I/home/preet/Dev/env/sys/boost-1.53" && make && make install

cd .. && cd OSMScout
./autogen.sh && ./configure --disable-see2-support --disable-cpp0x-support --prefix=/home/preet/Dev/env/sys/libosmscout CPPFLAGS="-DUSE_BOOST=1 -DHAVE_LIB_QTOPENGL=0 -I/home/preet/Dev/env/sys/boost-1.53" && make && make install

echo "======================="
echo "built:"
echo "libosmscout"
echo "libosmscout-import"
echo "Import"
echo "libosmscout-map"
echo "libosmcout-map-qt"
echo "OSMScout"
echo "======================="


