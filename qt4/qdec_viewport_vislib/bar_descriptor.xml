<?xml version="1.0" encoding="utf-8" standalone="no"?>

<qnx>
   <id>org.demo.qdec_viewport_osg</id>
   <name>Qt OpenSceneGraph</name>
   <versionNumber>1.0.0</versionNumber>
   <description>Demo displaying a OpenSceneGraph viewport in QML</description>

   <initialWindow>
      <systemChrome>none</systemChrome>
      <transparent>false</transparent>
      <autoOrients>true</autoOrients>
      <aspectRatio>landscape</aspectRatio>
   </initialWindow>

   <env var="QT_PLUGIN_PATH" value="app/native/plugins"/>
   <env var="LD_LIBRARY_PATH" value="app/native/lib"/>
<!--   <env var="QBB_USE_OPENGL" value="1" />-->

   <arg>-platform</arg>
   <arg>blackberry</arg>
   <author>canurabus</author>
   <action system="true">run_native</action>
   <category>core.media</category>

   <asset entry="true" path="qdec_viewport_osg" type="Qnx/Elf">qdec_viewport_osg</asset>
   <asset path="deploy/lib">lib</asset>
   <asset path="deploy/plugins">plugins</asset>
   <asset path="ui">ui</asset>
</qnx>
